// Import all partials
@require './_*.styl'

body, html
  min-height 100%
  height 100%

body
  user-select none
  background-color #CCC

.intro
  position absolute
  top 0
  left 0
  bottom 0
  z-index 1
  width 100%
  background-color #EEE
  text-align center
  display flex
  flex-direction column
  justify-content center
  align-items center
  .wrapper
    width 75%

.audio-pad
  display block
  width 100%
  height 100%
  background white
  &:focus
    outline none

.mute
  display block
  width 50%
  height 60px
  margin-top 2rem
  margin-left auto
  margin-right auto

body.playing
  .audio-pad
    background-color #FFF2B0
    transition background-color 150ms
