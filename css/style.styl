// Import all partials
@require './_*.styl'

body, html
  min-height 100%
  height 100%

body
  user-select none
  background-color #CCC
  font-size 22px
  // font-family "Trebuchet MS"
  font-family "Helvetica Neue"

img
  max-width 100%

.intro
  position absolute
  top 0
  left 0
  bottom 0
  z-index 1
  width 100%
  background-color #FFF
  text-align center
  display flex
  flex-direction column
  justify-content center
  align-items center
  .wrapper
    width 85%
  .logo
    margin-left auto
    margin-right auto
    margin-bottom 4rem
  .button
    background-image none
    border none
    border-radius 3rem
    padding 1.25rem 3rem
    background-color #691f86
    color white
    text-transform uppercase
    font-weight 100
    letter-spacing .1rem
    &:hover,
    &:focus,
    &:active
      background-color #8b20c2

.audio-pad
  display block
  width 100%
  height 100%
  background white
  &:focus
    outline none

.mute
  display block
  width 50%
  height 60px
  margin-top 2rem
  margin-left auto
  margin-right auto

body.playing
  .audio-pad
    background-color #FFF2B0
    transition background-color 150ms
