// Import all partials
@require './_*.styl'

body, html
  min-height 100%
  height 100%

body
  user-select none
  background-color #CCC
  font-size 22px
  // font-family "Trebuchet MS"
  font-family "Helvetica Neue"

img
  max-width 100%

.intro
  position absolute
  top 0
  left 0
  bottom 0
  z-index 1
  width 100%
  background-color #FFF
  text-align center
  display flex
  flex-direction column
  justify-content center
  align-items center
  .wrapper
    width 85%
  .logo
    margin-left auto
    margin-right auto
    margin-bottom 3rem
  .button
    background-image none
    border none
    border-radius 3rem
    padding 1.25rem 3rem
    margin-bottom 5rem
    background-color #691f86
    color white
    text-transform uppercase
    font-weight 100
    letter-spacing .1rem
    &:hover,
    &:focus,
    &:active
      background-color #8b20c2

.wrapper-bottom
  position absolute
  bottom 0
  left 0
  right 0
  z-index 2

.tips
  position relative
  display flex
  background-color #dafaff

h2
  font-size 1rem
  line-height 1.2
  margin 0

.tip
  display flex
  flex-direction column
  justify-content center
  align-items center
  width: 33.333333%
  &.title
    background-color darken(#dafaff, 6%)
    text-align left
  &.icon
    padding .25rem 1rem .5rem
  img, span
    display block
  img
    width 50%
    margin .35rem auto .25rem
  span
    font-size .75rem

.audio-pad
  display block
  width 100%
  height 100%
  background white
  &:focus
    outline none

.mute
  display block
  width 50%
  height 60px
  margin-top 2rem
  margin-left auto
  margin-right auto

